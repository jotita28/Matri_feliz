 <%=form_with(model: @service, local: true) do |f|%>

    <div class="field">
      <%=f.label :name, 'Nombre del servicio'%>
      <%=f.text_field :name%>
    </div>

    <div class="field">
      <%=f.label :detail, 'Descripción'%>
      <%=f.text_area :detail%>
    </div>

    <div class="field">
      <%=f.label :price, 'Precio US'%>
      <%=f.number_field :price%>
    </div>

    <div class="field">
      <%=f.label :photo, 'Foto de presentación'%>
      <%=f.text_field :photo%>
    </div>

    <div class="field">
      <%=f.label :images, 'Imágenes'%>
      <%=f.file_field :images, multiple: true%>
    </div>

    <div class="field">
      <%=f.label :address, 'Dirección'%>
      <%=f.text_field :address%>
    </div>

    <div class="field">
      <%=f.label :region, 'Región'%>
     <p class="col-xs-1" align="center"> <%=f.select :region, @regions_for_select, prompt: 'Selecciona:' %></p>
    </div>

    <div class="field">
      <%=f.label :todo_id, 'Categoria'%>
      <p class="col-xs-1" align="center"><%= f.select :todo_id, @todos_for_select, prompt: 'Selecciona:' %></p>
    </div>

    <div class="actions">
      <%=f.submit class:'genric-btn primary circle'%>
    </div>
  <% end %>