<div class="padding"></div>
<div class="container">
<h1 class="text-center"><b>Tus servicios</b></h1>
<div class="row">
    <% @services.each do |service| %>
  <div class="card col-sm-4 text-center p-3 border-light">
        <a href="<%= service_path(service) %>" data-turbolinks="false"><img src="<%= asset_path service.photo %>" class="card-img-top" alt="..."></a>
        <div class="card-body ">
        <h5 class="card-title text-info"><%= service.name %></h5>
        <h5 class="card-text"><%= service.todo.name%></h5>
        <p class="card-text">US $<b><%= service.price%></b></p>
        <p class="card-text"><%= service.detail%></p>
        <%=link_to 'Editar', edit_service_path(service), class: 'genric-btn info circle', 'data-turbolinks':false %>
        <%=link_to 'Eliminar', service, class: 'genric-btn danger circle', method: :delete, data: { confirm: 'EstÃ¡s seguro?'}%>
       </div>
  </div>
    <% end %>
</div>
</div>
